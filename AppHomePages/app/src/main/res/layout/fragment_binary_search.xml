<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BinarySearchFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="400dp"

        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/generateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/generate_button"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/spinner"
        app:layout_constraintTop_toBottomOf="@id/imageView"/>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="90dp"
        android:layout_height="34dp"

        app:layout_constraintLeft_toRightOf="@id/generateButton"
        app:layout_constraintTop_toTopOf="@id/generateButton"
        app:layout_constraintRight_toLeftOf="@id/frameButton"/>

    <Button
        android:id="@+id/frameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/frame_button"

        app:layout_constraintLeft_toRightOf="@id/spinner"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/spinner"/>


</android.support.constraint.ConstraintLayout>